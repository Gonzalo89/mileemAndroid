<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.g7.mileemandroid.Activites.DetallePropiedad" >

    <ImageView
        android:id="@+id/imagenDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/precioDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ambientesDetalle"
        android:layout_below="@+id/ambientesDetalle"
        android:layout_marginTop="62dp"
        android:text="@string/Precio" />

    <TextView
        android:id="@+id/ambientesDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/direccionDetalle"
        android:layout_below="@+id/direccionDetalle"
        android:layout_marginTop="52dp"
        android:text="@string/Ambientes" />

    <TextView
        android:id="@+id/direccionDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/superficieDetalle"
        android:layout_centerVertical="true"
        android:text="@string/Direccion" />

    <TextView
        android:id="@+id/superficieDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/direccionDetalle"
        android:layout_alignLeft="@+id/imagenDetalle"
        android:layout_marginBottom="16dp"
        android:text="@string/Superficie" />

    <android.widget.Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/precioDetalle"
        android:layout_marginLeft="37dp"
        android:layout_toRightOf="@+id/imagenDetalle"
        android:onClick="onClickVerFotos"
        android:text="Ver Fotos" />

</RelativeLayout>
